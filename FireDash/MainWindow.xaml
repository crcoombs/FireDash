<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="FireDash" Height="750" Width="1000" Background="Black" Top="0" Left="0">
    <Window.Resources>
        <SolidColorBrush x:Key="TextColor" Color="#FFC8C8C8"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FF1A1A1D"/>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
            <Setter Property="RowBackground" Value="{StaticResource BackgroundColor}" />
            <Setter Property="Foreground" Value="{StaticResource TextColor}" />
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource TextColor}" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF8F8F8F" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value= "#FF3C3C3C" />
        </Style>
    </Window.Resources>
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="631*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="156*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="313*"/>
            <ColumnDefinition Width="186*"/>
            <ColumnDefinition Width="493*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="OutboundDropListGrid" Margin="0,250,0,0" CanUserReorderColumns="False" CanUserResizeRows="False" IsReadOnly="True" Grid.ColumnSpan="3" Height="250" VerticalAlignment="Top" Grid.Row="1"/>
        <DataGrid x:Name="OutboundTop10Grid" CanUserReorderColumns="False" CanUserResizeRows="False" IsReadOnly="True" Grid.Column="2" Grid.RowSpan="3" Grid.Row="1" Height="200" VerticalAlignment="Bottom" Margin="0"/>
        <DataGrid x:Name="InboundTop10Grid" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeRows="False" Grid.RowSpan="3" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Bottom" Height="200"/>
        <DataGrid x:Name="InboundDropListGrid" Margin="0" CanUserReorderColumns="False" CanUserResizeRows="False" IsReadOnly="True" Height="250" BorderThickness="0" Background="#FF1A1A1D" RowBackground="#FF161616" Foreground="#FFC8C8C8" HorizontalGridLinesBrush="#FFC8C8C8" HeadersVisibility="Column" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
    </Grid>
</Window>
